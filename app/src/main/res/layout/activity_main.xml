<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1026dp">

        <LinearLayout
            android:id="@+id/layoutcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ingredients_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="48dp"
                android:lineSpacingExtra="2sp"
                android:text="@string/ingredients_title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ingredients_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="48dp"
                android:lineSpacingExtra="2sp"
                android:text="@string/ingredients_list"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/extra_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="48dp"
                android:lineSpacingExtra="2sp"
                android:text="@string/extra_title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/extra_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:lineSpacingExtra="2sp"
                android:text="@string/extra_list"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/steps_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="48dp"
                android:lineSpacingExtra="2sp"
                android:text="@string/steps_title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/steps_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="48dp"
                android:lineSpacingExtra="2sp"
                android:text="@string/steps_list"
                android:textSize="18sp" />

            <Button
                android:id="@+id/steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:backgroundTint="#FBBB25"
                android:lineSpacingExtra="2sp"
                android:text="@string/steps"
                android:textColor="#000000"
                android:textColorLink="#FBBB25" />

            <TextView
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="48dp"

                android:lineSpacingExtra="2sp"
                android:text="@string/tip"
                android:textSize="18sp" />

            <ImageView
                android:src="@drawable/chocolatefondant"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_marginTop="28dp" />
<!--            android:layout_marginBottom="48dp"-->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>